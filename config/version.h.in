#ifndef GHOST_VERSION_H
#define GHOST_VERSION_H

// Version information
#define GHOST_VERSION_MAJOR @GHOST_OS_VERSION_MAJOR@
#define GHOST_VERSION_MINOR @GHOST_OS_VERSION_MINOR@
#define GHOST_VERSION_PATCH @GHOST_OS_VERSION_PATCH@
#define GHOST_VERSION_STRING "@GHOST_OS_VERSION@"

// Build information
#define GHOST_BUILD_TYPE "@CMAKE_BUILD_TYPE@"
#define GHOST_COMPILER_ID "@CMAKE_C_COMPILER_ID@"
#define GHOST_COMPILER_VERSION "@CMAKE_C_COMPILER_VERSION@"

// Security features
#cmakedefine01 ENABLE_STACK_PROTECTOR
#cmakedefine01 ENABLE_POSITION_INDEPENDENT_CODE
#cmakedefine01 ENABLE_FORTIFY_SOURCE
#cmakedefine01 ENABLE_SECURITY_CHECKS

// Optimization features
#cmakedefine01 ENABLE_LINK_TIME_OPTIMIZATION
#cmakedefine01 ENABLE_DEAD_CODE_ELIMINATION

#endif // GHOST_VERSION_H
